@using System.Web.Configuration;
@model Lifetrons.Erp.Web.ViewModel.NotificationViewModel

<h1>SMS Notifications</h1>
<p>Use this form to send SMS notifications to any subscribers.</p>

<h3>
    Send "add" or "remove" to @WebConfigurationManager.AppSettings["TwilioPhoneNumber"] to start or remove message subscription
</h3>

@using (Html.BeginForm("Create", "Notifications"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Message)
        @Html.TextAreaFor(m => m.Message, new { @class = "form-control manageMaxLength", @maxlength = "130", placeholder = "New things are happening!" })
        @Html.ValidationMessageFor(x => x.Message, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ImageUrl)
        @Html.TextBoxFor(m => m.ImageUrl, new { @class = "form-control", placeholder = "http://fake.twilio.com/some_image.png" })
    </div>
    <button type="submit" class="btn btn-primary">Send Message</button>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/Case")
}
