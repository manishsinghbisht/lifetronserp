<style>
    body{margin:40px;}

.stepwizard-step p {
    margin-top: 10px;    
}

.stepwizard-row {
    display: table-row;
}

.stepwizard {
    display: table;     
    width: 100%;
    position: relative;
}

.stepwizard-step button[disabled] {
    opacity: 1 !important;
    filter: alpha(opacity=100) !important;
}

.stepwizard-row:before {
    top: 14px;
    bottom: 0;
    position: absolute;
    content: " ";
    width: 100%;
    height: 1px;
    background-color: #ccc;
    z-order: 0;
    
}

.stepwizard-step {    
    display: table-cell;
    text-align: center;
    position: relative;
}

.btn-circle {
  width: 30px;
  height: 30px;
  text-align: center;
  padding: 6px 0;
  font-size: 12px;
  line-height: 1.428571429;
  border-radius: 15px;
}
</style>

<div class="panel-body" style="overflow:auto;">
    <div class="stepwizard">
        <div class="stepwizard-row">
            <div class="stepwizard-step">
                <button id="stepWizardAddress" type="button" class="btn btn-default btn-circle" onclick="window.location.href='@Url.Action("Index", "Address", new { area = "People" })';">1</button>
                <p>Addresses</p>
            </div>

            <div class="stepwizard-step">
                <button id="stepWizardAccount" type="button" class="btn btn-default btn-circle" onclick="window.location.href='@Url.Action("Index", "SAccount", new { area = "People" })';">2</button>
                <p>Account</p>
            </div>
            <div class="stepwizard-step">
                <button id="stepWizardContact" type="button" class="btn btn-default btn-circle" onclick="window.location.href='@Url.Action("Index", "Contact", new { area = "People" })';">3</button>
                <p>Contact</p>
            </div>

            <div class="stepwizard-step">
                <button id="stepWizardSales" type="button" class="btn btn-default btn-circle" onclick="window.location.href='@Url.Action("Index", "Home", new { area = "Sales" })';">4</button>
                <p>Sales</p>
            </div>
            <div class="stepwizard-step">
                <button id="stepWizardWorks" type="button" class="btn btn-default btn-circle" onclick="window.location.href='@Url.Action("Index", "Home", new {area = "Works"})';">5</button>
                <p>Works</p>
            </div>
            <div class="stepwizard-step">
                <button id="stepWizardActivities" type="button" class="btn btn-default btn-circle" onclick="window.location.href='@Url.Action("Index", "Home", new {area = "Activity"})';">6</button>
