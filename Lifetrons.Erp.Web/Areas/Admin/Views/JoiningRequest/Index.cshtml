@using Resources;
@using Lifetrons.Erp.Helpers
@model IEnumerable<Lifetrons.Erp.Data.JoiningRequest>

@{
    ViewBag.Title = "Joining Requests";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h4 class="panel-title">Joining Request</h4>
    </div>
    @*<p>
            @Html.ActionLink("Create New", "Create")
        </p>*@


    <table class="table table-striped table-hover">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RequestType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RequestDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
           <th>
                @Html.DisplayNameFor(model => model.RequestComments)
            </th>

            <th>
                @Html.DisplayName("Requested By")
                @*@Html.DisplayNameFor(model => model.RequestByUser.UserName)*@
            </th>
            <th>
                @Html.DisplayName("Submitted To")
                @*@Html.DisplayNameFor(model => model.SubmittedToUser.UserName)*@
            </th>
            
            <th></th>
        </tr>

        @foreach (var item in Model)
    {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.RequestType)
                </td>
                <td>
                    @ControllerHelper.ConvertDateTimeFromUtc(item.RequestDate, User.TimeZone())
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
               
                <td>
                    @Html.DisplayFor(modelItem => item.RequestComments)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.AspNetUser.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AspNetUser1.UserName)
                </td>
               
                <td>
                    @Html.ActionLink("Respond", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id })
                    @*| @Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
                </td>
            </tr>
    }

    </table>

</div>