@using Resources;
@using Lifetrons.Erp.Helpers
@model Lifetrons.Erp.Data.JoiningRequest

@{
    ViewBag.Title = Resources.Metadata_UISection_Create;
}

<h2> Join Organization </h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Joining Request</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
         
            <div class="form-group">
                @Html.LabelFor(model => model.RequestComments, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.RequestComments, new { @maxlength = "200", @placeholder = "Please allow me to join [Organization]", data_toggle = "tooltip", data_placement = "right", title = "Use [Acme Corporation] as organization name for demo" })
                    <br />
                    <small>Sample text: Please allow me to join [Organization Name]. 
                    <br />
                    Demo Organization Name: Acme Corporation.</small>
                    @Html.ValidationMessageFor(model => model.RequestComments)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.SubmittedTo, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.SubmittedTo, new { @maxlength = "399", @placeholder = "Username of approver", data_toggle = "tooltip", data_placement = "right", title = "Enter [SUPPORT] for demo" })
                    <br />
                    <small>Enter [SUPPORT] for demo purpose.</small>
                    @Html.ValidationMessageFor(model => model.SubmittedTo)
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Send Request" class="btn btn-default" />
                </div>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
@Scripts.Render("~/bundles/ESCustomScript")
@Scripts.Render("~/bundles/HideMenus")
}
