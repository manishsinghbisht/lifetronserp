@using Resources;
@using PagedList
@using PagedList.Mvc
@using Lifetrons.Erp.Helpers

@model IEnumerable<Lifetrons.Erp.Data.PriceBookLineItem>

@{
    ViewBag.Title = Resources.Metadata_UISection_Index;
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h4 class="panel-title">@Resources.Metadata_Products - @Resources.Metadata_PriceBookId_PriceBook  </h4>
    </div>

    <p>
        <a href="@Url.Action("Create", new { id = ViewData["PriceBookId"] })" class="btn btn-default">
            <span class="glyphicon glyphicon-plus"></span>
            @Resources.Metadata_UISection_Add
        </a>
    </p>
    <div class="panel-body" style="overflow:auto;">
        <table class="table table-striped table-hover">
            <tr>
                <th></th>
                <th></th>
                <th>
                    @Html.DisplayNameFor(model => model.ProductId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ListPrice)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ShrtDesc)
                </th>
                <th>
                    @Html.DisplayName("Image")
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Authorized)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Active)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PriceBookId)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a id="Detail" href="@Url.Action("Details", new { priceBookId = item.PriceBookId, productId = item.ProductId })">
                            <i id="social" class="fa fa-expand fa-2x social-fb"></i>
                        </a>
                    </td>

                    <td>
                        <a id="Edit" href="@Url.Action("Edit", new { priceBookId = item.PriceBookId, productId = item.ProductId })">
                            <i id="social" class="fa fa-edit fa-2x social-em"></i>
                        </a>
                    </td>
                
                    <td>
                        @Html.DisplayFor(modelItem => item.Product.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ListPrice)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ShrtDesc)
                    </td>
                    <td>
                        <img src="@Url.Action("GetProductImageThumbnail", "Media", new { area = "", productId = item.ProductId })" class="img-responsive" alt="Image Not Available"
                             onerror="this.onerror=null;this.src='@Url.Content("~/Images/ImageNotAvailable.jpg")';" height="50" width="50">

                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Authorized)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Active)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PriceBook.Name)
                    </td>
                    <td>
                        <a id="Delete" href="@Url.Action("Delete", new { priceBookId = item.PriceBookId, productId = item.ProductId })">
                            <i id="social" class="fa fa-trash-o fa-2x social-gp"></i>
                        </a>
                    </td>
                </tr>
            }

        </table>
    </div>
</div>