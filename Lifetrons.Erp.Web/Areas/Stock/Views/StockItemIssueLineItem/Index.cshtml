@using Resources;
@using Lifetrons.Erp.Helpers
@model IEnumerable<Lifetrons.Erp.Data.StockItemIssue>

@{
    ViewBag.Title = Resources.Metadata_UISection_Index;
}


<div class="panel panel-default">
    <div class="panel-heading">
        <h4 class="panel-title">Stock Item Issue</h4>

    </div>
    <p>
        <a href="@Url.Action("Create", "StockItemIssueLineItem", new { stockIssueId = ViewData["StockIssueId"] })" class="btn btn-default">
            <span class="glyphicon glyphicon-plus"></span>
            Add Item Issue
        </a> 
    </p>

    <div class="panel-body" style="overflow:auto;">
        <table class="table table-striped table-hover">
            <tr>
                <th></th>
                <th></th>
                <th>
                    @Html.DisplayNameFor(model => model.Serial)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.JobNo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CaseNo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TaskNo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ItemId)
                </th>
             
                <th>
                    @Html.DisplayNameFor(model => model.Quantity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Weight)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.ExtraQuantity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DeliveryDate)
                </th>
                <th>Image</th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a id="Detail" href="@Url.Action("Details", "StockItemIssueLineItem", new { id = item.Id })">
                            <i id="social" class="fa fa-expand fa-2x social-fb"></i>
                        </a>
                    </td>

                    <td>
                        <a id="Edit" href="@Url.Action("Edit", "StockItemIssueLineItem", new { id = item.Id })">
                            <i id="social" class="fa fa-edit fa-2x social-em"></i>
                        </a>
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Serial)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.JobNo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CaseNo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TaskNo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Item.Name)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Weight) &nbsp; @Html.DisplayFor(modelItem => item.WeightUnit.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ExtraQuantity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DeliveryDate)
                    </td>
                    <td>
                        <img src="@Url.Action("GetItemImageThumbnail", "Media", new { area = "", itemId = item.ItemId })" class="img-responsive" alt="Image Not Available"
                             onerror="this.onerror=null;this.src='@Url.Content("~/Images/ImageNotAvailable.jpg")';" height="50" width="50">
                    </td>
                    <td>
                        <a id="Delete" href="@Url.Action("Delete", "StockItemIssueLineItem", new { id = item.Id })">
                            <i id="social" class="fa fa-trash-o fa-2x social-gp"></i>
                        </a>
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
