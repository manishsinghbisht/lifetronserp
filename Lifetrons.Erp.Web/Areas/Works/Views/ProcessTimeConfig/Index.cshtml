@using Resources;
@using Lifetrons.Erp.Helpers
@model IEnumerable<Lifetrons.Erp.Data.ProcessTimeConfig>

@{
    ViewBag.Title = "Index";
}

<table class="table-condensed">
    <tr><td><h3>Process Work Time</h3></td></tr>
    <tr>
        <td class="col-xs-6">
            @Html.ActionLink("Create New", "Create")
        </td>
    </tr>
</table>

<table class="table table-striped table-hover">
    <tr>
        <th></th>
        <th></th>
        <th>
            @Html.DisplayNameFor(model => model.ProcessId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FromDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ToDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndTime)
        </th>
        
        
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <a id="Detail" href="@Url.Action("Details", new { id = item.Id })">
                    <i id="social" class="fa fa-expand fa-2x social-fb"></i>
                </a>
            </td>

            <td>
                <a id="Edit" href="@Url.Action("Edit", new { id = item.Id })">
                    <i id="social" class="fa fa-edit fa-2x social-em"></i>
                </a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Process.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FromDate)
            </td>
          
            <td>
                @Html.DisplayFor(modelItem => item.ToDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndTime)
            </td>
            
        </tr>
    }

</table>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/ProcessTimeConfig")
}