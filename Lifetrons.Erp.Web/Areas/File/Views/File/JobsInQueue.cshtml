                                        <br />
                                        @ControllerHelper.ConvertDateTimeFromUtc(item.SubmittedDate, User.TimeZone())
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NumberOfPagesSubmitted)
                                    </td>
                                    <td>
                                        @ControllerHelper.ConvertDateTimeFromUtc(item.DeliveredDate, User.TimeZone())
