    if ((userRoles.Contains("OrganizationLevel") || userRoles.Contains("FileAdmin")) && applicationUserId == TempData["UserId"].ToString())
    {
        <div>
            @Html.ActionLink("Download Jobs", "RunDownloadJob", "File")
        </div>
    }
