                                </th>
                                <th>
                                    Message
                                </th>

                                <th>
                                    Status
                                </th>
                                <th>
                                    File
                                </th>
                                <th>
                                    Pages Rcvd
                                </th>
                                <th>
                                    Template
                                </th>
                                <th>
                                    Processor
                                </th>
                                <th>
                                    Upload
                                </th>
                                <th>
                                    Pages Submitted
                                </th>
                                <th>
                                    Dispatch
                                </th>
                                <th>
                                    Edit Page Count
                                </th>
                                <th></th>
                            </tr>
                            @foreach (var item in submittedFiles)
                            {
                                <tr>
                                    <td class="hidden">@Html.DisplayFor(modelItem => item.Id)</td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Origin)
                                    </td>
                                    <td>
