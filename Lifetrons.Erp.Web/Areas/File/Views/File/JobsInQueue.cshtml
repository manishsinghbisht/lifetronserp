@using System.Threading;
@using Lifetrons.Erp.Helpers;
@using Resources;
@using System.Collections;
@using Microsoft.AspNet.Identity;
@using Microsoft.AspNet.Identity.EntityFramework;

@{
    ViewBag.Title = "Files";
}

@if (Request.IsAuthenticated)
{
