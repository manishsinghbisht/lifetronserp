@using Resources;
@model IEnumerable<Lifetrons.Erp.Data.Target>

@{
    ViewBag.Title = "Targets";
}

<h2>Targets</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th></th>
        <th></th>
        <th>
            @Html.DisplayNameFor(model => model.TargetDate)
        </th>
        <th>
            @Html.DisplayName("Target For")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TargetFigure)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.ObjectName)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.ShrtDesc)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OwnerId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Authorized)
        </th>

        <th></th>
    </tr>

    @{ int i = 0; }
    @foreach (var item in Model)
    {

        <tr>
            <td>
                <a id="Detail" href="@Url.Action("Details", new { id = item.Id })">
                    <i id="social" class="fa fa-expand fa-2x social-fb"></i>
                </a>
            </td>

            <td>
                <a id="Edit" href="@Url.Action("Edit", new { id = item.Id })">
                    <i id="social" class="fa fa-edit fa-2x social-em"></i>
                </a>
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.TargetDate)
            </td>
            <td>
                @TempData["ObjectIdName" + i]
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TargetFigure)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.ObjectName)
            </td>
           
            
           
            <td>
                @Html.DisplayFor(modelItem => item.ShrtDesc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AspNetUser2.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Authorized)
            </td>
            <td>
                <a id="Delete" href="@Url.Action("Delete", new { id = item.Id })">
                    <i id="social" class="fa fa-trash-o fa-2x social-gp"></i>
                </a>
            </td>
        </tr>
        i++;
    }

</table>

@section Scripts {
@Scripts.Render("~/bundles/jqueryval")
@Scripts.Render("~/bundles/Target")
}
