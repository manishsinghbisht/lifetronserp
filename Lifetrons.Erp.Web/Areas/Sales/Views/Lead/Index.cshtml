@using Resources;
@using PagedList.Mvc;
@using PagedList;
@using Lifetrons.Erp.Helpers

@model IEnumerable<Lifetrons.Erp.Data.Lead>

@{
    ViewBag.Title = Resources.Metadata_LeadId_Lead;
}

<table class="table-condensed">
    <tr><td><h2>Leads</h2></td></tr>
    <tr>
        <td class="col-md-4">
            <p>
                @Html.ActionLink("Create New", "Create")
            </p>
        </td>

        <td class="col-md-4">
            @Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page = page, area = ViewContext.RouteData.DataTokens["area"] }), PagedListRenderOptions.MinimalWithPageCountText)
        </td>
        <td class="col-md-4">
           @{Html.RenderAction("ShowSearchForm", "Search", new { action = "Search", controller = ViewContext.RouteData.DataTokens["area"] + "/Lead", area = "", placeholder = "Search name or code" }); }
        </td>
    </tr>
</table>

<table class="table table-striped table-hover">
    <tr>
        <th></th>
        <th></th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsConverted)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PrimaryPhone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PrimaryEMail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LeadStatusId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OwnerId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ModifiedDate)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <a id="Detail" href="@Url.Action("Details", new { id = item.Id })">
                    <i id="social" class="fa fa-expand fa-2x social-fb"></i>
                </a>
            </td>

            <td>
                <a id="Edit" href="@Url.Action("Edit", new { id = item.Id })">
                    <i id="social" class="fa fa-edit fa-2x social-em"></i>
                </a>
            </td>
          
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.CreatedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsConverted)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrimaryPhone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrimaryEMail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LeadStatu.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AspNetUser2.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModifiedDate)
            </td>
            <td>
                <a id="Delete" href="@Url.Action("Delete", new { id = item.Id })">
                    <i id="social" class="fa fa-trash-o fa-2x social-gp"></i>
                </a>
            </td>
        </tr>
    }

</table>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/Lead")
}