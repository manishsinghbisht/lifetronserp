@using Resources;
@using PagedList
@using PagedList.Mvc
@using Lifetrons.Erp.Helpers

@model IEnumerable<Lifetrons.Erp.Data.Order>

@{
    ViewBag.Title = "Orders";
}

<table class="table-condensed">
    <tr><td><h2>@Resources.Metadata_OrderId_Order - @Resources.Metadata_UISection_Index</h2></td></tr>
    <tr>
        <td class="col-xs-4">
                <p>
                    @Html.ActionLink("Create New", "Create")
                </p>
        </td>

        <td class="col-xs-4">
            @Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page = page, area = ViewContext.RouteData.DataTokens["area"] }), PagedListRenderOptions.MinimalWithPageCountText)
        </td>
        <td class="col-xs-4">
           @{Html.RenderAction("ShowSearchForm", "Search", new { action = "Search", controller = ViewContext.RouteData.DataTokens["area"] + "/Order", area = "", placeholder = "Search name or code" }); }
        </td>
    </tr>
</table>

<table class="table table-striped table-hover">
    <tr>
        <th></th>
        <th></th>
        <th>
            @Html.DisplayNameFor(model => model.OwnerId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrderNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Code)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RefNo)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.AccountId)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.SubAccountId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.DeliveryDate)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.DeliveryStatusId)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.PriorityId)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.QuoteId)
        </th>*@
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <a id="Detail" href="@Url.Action("Details", new { id = item.Id })">
                    <i id="social" class="fa fa-expand fa-2x social-fb"></i>
                </a>
            </td>
            <td>
                <a id="Edit" href="@Url.Action("Edit", new { id = item.Id })">
                    <i id="social" class="fa fa-edit fa-2x social-em"></i>
                </a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AspNetUser2.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RefNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Account.Name)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Account1.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeliveryDate)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.DeliveryStatu.Name)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Priority.Name)
            </td>
         
            <td>
                    <a id="Delete" href="@Url.Action("Delete", new {id = item.Id})">
                        <i id="social" class="fa fa-trash-o fa-2x social-gp"></i>
                    </a>
            </td>
        </tr>
    }

</table>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/Order")
}
